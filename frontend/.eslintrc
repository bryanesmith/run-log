{
    root: true,
    env: {
        browser: true,
        node: true,
        jasmine: true,
        es6: true
    },
    globals: {
        inject: true
    },
    parserOptions: {
      sourceType: "module",
      ecmaVersion: 2018,
      ecmaFeatures: {
        modules: true,
        jsx: true
      }
    },
    plugins: [
      "react"
    ],
    rules: {
      block-scoped-var: "warn",
      complexity: "warn",
      eqeqeq: "warn",
      indent: ["warn", 2, { "SwitchCase": 1 }],
      linebreak-style: ["error", "unix"],
      no-func-assign: "error",
      no-global-assign: "warn",
      no-invalid-regexp: "error",
      no-redeclare: "error",
      no-shadow: "warn",
      no-shadow-restricted-names: "error",
      no-undef: "error",
      no-unreachable: "error",
      no-unused-expressions: "warn",
      no-unused-vars: "warn",
      no-console: "off",
      semi: ["error", "always"],
      valid-typeof: "error",
      vars-on-top: "warn"
    }
}
